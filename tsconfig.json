{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2017"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": false,
    "outDir": "dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*.ts"]
}
